{{> Site/Header}}

<script type="text/javascript" src="/assets/js/records.js"></script>

<br />
{{#has_weights}}

	<table class="table table-striped table-bordered">

		<thead>
			<tr>
				<th>Date</th>
				<th>Weight</th>
				<th>Comment</th>
				<th>Actions</th>
			</tr>	
		</thead>

		<tbody>
		{{#weights}}
			<tr id="row_{{id}}">
				<td>{{time}}</td>
				<td><input id="weight_{{id}}" type="text" value="{{weight}}" /></td>
				<td><textarea cols="50" rows="4" id="comment_{{id}}">{{comment}}</textarea></td>
				<td>
					<input type="submit" class="btn" value="Update" onClick="return false;">
					<input type="submit" class="btn" value="Delete" onClick="deleteRecord({{id}}); return false;">
				</td>
			</tr>
		{{/weights}}
		</tbody>

	</table>

{{/has_weights}}

